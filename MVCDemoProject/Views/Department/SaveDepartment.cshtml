
@{
    ViewBag.Title = "SaveDepartment";
}

<h2>SaveDepartment</h2>

<form method="POST" id="SaveDepartment">
    <table>
        <tr>
            <td><label for="DepartmentCode">Code</label></td>
            <td><input type="text" id="DepartmentCode" name="DepartmentCode" /></td>
        </tr>
        <tr>
            <td><label for="DepartmentName">Name</label></td>
            <td><input type="text" id="DepartmentName" name="DepartmentName" /></td>
        </tr>

        <tr>
            <td></td>
            <td><input type="submit" value="Save" /></td>
        </tr>
    </table>
</form>
@ViewBag.Message

@section scripts
{
  
<script src="~/Scripts/jquery-1.12.4.js"></script>
<script src="~/Scripts/jquery.validate.js"></script>

<script>
    $(document).ready(function () {
        $("#SaveDepartment").validate({
            rules: {
                DepartmentCode: {
                    required: true,
                    minlength: 2
                },
                DepartmentName: "required"

            },
            messages: {
                DepartmentCode: {
                    required: "Please enter item price",
                    minlength: "Code should be 2 to 7 charecter long"
                },

                DepartmentName: "Please enter item name"


            }
        });

    });
</script>

}
